# Uncomment this line to define a global platform for your project
platform :ios, '13.0'

# Codemagic + Flutter compatible FLUTTER_ROOT resolution
flutter_root = ENV['FLUTTER_ROOT']
if flutter_root.nil?
  raise "FLUTTER_ROOT not set. Codemagic should set this automatically."
end

load File.join(flutter_root, 'packages', 'flutter_tools', 'bin', 'podhelper.rb')

target 'Runner' do
  # Required for modern Flutter
  use_frameworks! :linkage => :static
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)

    # Fixes some Xcode 15 / iOS 17 & Firebase issues (safe & recommended)
    target.build_configurations.each do |config|
      config.build_settings['ENABLE_BITCODE'] = 'NO'
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
    end
  end
end
